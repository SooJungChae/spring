<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.soocompany.mvc.BoardMapper">
	<select id="selectBoard" resultType="com.soocompany.dto.BoardVO">
		SELECT title FROM board
	</select>
	
	<select id="readBoard" resultType="com.soocompany.dto.BoardVO">
		SELECT idx, title, contents, writer, regDate FROM board
	</select>
	
	<!--<select id="editBoard" resultType="com.soocompany.dto.BoardVO">-->
		<!--SELECT idx, title, contents, writer, regDate FROM board where idx = '1'-->
	<!--</select>-->
	
	<select id="boardDetail" resultType="com.soocompany.dto.BoardVO">
		SELECT idx, title, contents, writer, regDate FROM board where idx = #{id}
	</select>

	<insert id="writeBoard" parameterType="com.soocompany.dto.BoardVO">
		INSERT INTO board (title, contents, writer)
		VALUES (#{title}, #{contents}, #{writer})
	</insert>

	<update id="editBoard" parameterType="com.soocompany.dto.BoardVO" >
		UPDATE board
		SET title = #{title},
			contents = #{contents},
			writer = #{writer}
		WHERE idx = #{idx}
	</update>

	<delete id="deleteBoard" parameterType="java.lang.Integer">
		DELETE FROM board
		WHERE idx = #{id}
	</delete>
	
</mapper>